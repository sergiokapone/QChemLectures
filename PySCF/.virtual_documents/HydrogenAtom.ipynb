import numpy as np
import matplotlib.pyplot as plt
from sympy.physics.hydrogen import R_nl
from sympy.functions.special.spherical_harmonics import Ynm
from sympy.abc import r, phi,theta, Z
from sympy import *


Ynm(1, +1, theta, phi).expand(func=True)


Ynm(1, -1, theta, phi).expand(func=True)


Ynm(1, 0, theta, phi).expand(func=True)


px = 1/sqrt(2) * (Ynm(1, -1, theta, phi).expand(func=True) - Ynm(1, +1, theta, phi).expand(func=True))
trigsimp(px).subs(exp(I * phi) + exp( - I * phi), 2 * cos(phi))


py = I / sqrt(2) * (Ynm(1, -1, theta, phi).expand(func=True) + Ynm(1, +1, theta, phi).expand(func=True))
trigsimp(py).subs(exp(I * phi) - exp( - I * phi), 2 * I * sin(phi))


pz = Ynm(1, 0, theta, phi).expand(func=True)
pz


R_nl(2,0,r,Z)


R10 = lambdify(r, R_nl(1, 0, r, 1), 'numpy')
R20 = lambdify(r, R_nl(2, 0, r, 1), 'numpy')
R21 = lambdify(r, R_nl(2, 1, r, 1), 'numpy')
R30 = lambdify(r, R_nl(3, 0, r, 1), 'numpy')
R31 = lambdify(r, R_nl(3, 1, r, 1), 'numpy')
R32 = lambdify(r, R_nl(3, 2, r, 1), 'numpy')


r = np.linspace(0, 15, 100)


# Создаём сетку 2x3 подграфиков
fig, axes = plt.subplots(2, 3, figsize=(15, 10))
axes = axes.flatten() # превращаем в одномерный массив для удобства


# Список функций и их названий
orbitals = [(R10, '$R_{10}$'),
(R20, '$R_{20}$'),
(R21, '$R_{21}$'),
(R30, '$R_{30}$'),
(R31, '$R_{31}$'),
(R32, '$R_{32}$')]


# Рисуем каждый график на отдельной оси
for ax, (R, label) in zip(axes, orbitals):
    ax.plot(r, R(r), label=label)
    # ax.set_ylim(0, 0.05)
    ax.set_yticks([])
    ax.spines['left'].set_position('zero')
    ax.spines['bottom'].set_position('zero')
    ax.spines['top'].set_color('none')
    ax.spines['right'].set_color('none')
    ax.xaxis.set_ticks_position('bottom')
    ax.yaxis.set_ticks_position('left')
    ax.legend()


plt.tight_layout() # подгонка расстояний между подграфиками
plt.show()
